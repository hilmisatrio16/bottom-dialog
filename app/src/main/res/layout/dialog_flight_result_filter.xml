<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/NEUTRAL05" />
    <View
        android:id="@id/gridTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7C7C7C"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnClose"/>

    <LinearLayout
        android:id="@+id/classLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/gridTop">
        <RelativeLayout
            android:id="@+id/layoutHargaTermurah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >
            <LinearLayout
                android:id="@+id/layoutText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tvHargaTermurah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga - "
                    android:lineHeight="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Termurah"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/NEUTRAL05"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/icCeklisHargaTermurah"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL02"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutText1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutKeberangkatanAwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/layoutText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tvKeberangkatanAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keberangkatan - "
                    android:lineHeight="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paling Awal"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/NEUTRAL05"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/icCeklisKeberangkatanAwal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL02"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutText2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutKeberangkatanAkhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/layoutText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tvKeberangkatanAkhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keberangkatan - "
                    android:lineHeight="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paling Akhir"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/NEUTRAL05"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/icCeklisKeberangkatanAkhir"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL02"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutText3"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutKedatanganAwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/layoutText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tvKedatanganAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kedatangan - "
                    android:lineHeight="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paling Awal"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/NEUTRAL05"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/icCeklisKedatanganAwal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL02"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutText4"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutKedatanganAkhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/layoutText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tvKedatanganAkhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kedatangan - Paling Akhir"
                    android:lineHeight="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paling Akhir"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/NEUTRAL05"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/icCeklisKedatanganAkhir"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL02"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutText5"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnSaveFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="24dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/NEUTRAL01"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/DARKBLUE05"
        app:layout_constraintTop_toBottomOf="@id/classLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>