<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BerandaFragment">
<!--add scrollview-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:background="@drawable/background_beranda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hei, Mau kemana?"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginStart="12dp"
            android:textColor="#151515"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--       departure and arrival-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/background_border_destination_beranda">
                    <LinearLayout
                        android:id="@+id/setDeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_plane"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="from"
                            android:layout_marginLeft="12dp"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="54dp">

                            <TextView
                                android:id="@+id/tvDeparture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:lineHeight="24dp"
                                android:text="Jakarta (JKTA)"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/gridTop1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:background="#D0D0D0"
                        android:layout_below="@id/setDeparture"/>
                    <LinearLayout
                        android:id="@+id/setArrival"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@id/gridTop1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_plane"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="to"
                            android:layout_marginLeft="12dp"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="54dp">

                            <TextView
                                android:id="@+id/tvArrival"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:lineHeight="24dp"
                                android:text="Melbourne (MLB)"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/background_button_change_position"
                        android:src="@drawable/ic_change"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </RelativeLayout>
                <!--       pulang pergi-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulang-pergi?"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/optionFlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:trackTint="#4B1979"
                        app:thumbTint="#FFFFFF"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <!--       set tanggal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="12dp">
                    <RelativeLayout
                        android:id="@+id/setDateDeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/imgDateDeparture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_date"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/imgDateDeparture">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departure"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>
                            <!--                   tanggal menggunakan poppins medium-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Maret 2023"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--           pick tanggal kembali-->
                    <RelativeLayout
                        android:id="@+id/setDateReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/imgDateReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_date"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/imgDateReturn">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departure"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>
                            <!--                   tanggal menggunakan poppins medium-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pilih tanggal"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#7126B5"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <!--       set passanger and seat class -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="16dp">
                    <RelativeLayout
                        android:id="@+id/setPassangers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/imgPassangers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_passenger"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/imgPassangers">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Passengers"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>
                            <!--                   tanggal menggunakan poppins medium-->
                            <TextView
                                android:id="@+id/tvPassengers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 Penumpang"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--           pick seat class-->
                    <RelativeLayout
                        android:id="@+id/setSeatClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/imgSeatClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_seat_class"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/imgSeatClass">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seat Class"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>
                            <!--                   tanggal menggunakan poppins medium-->
                            <TextView
                                android:id="@+id/tvSeatClass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btnSaveSeatPassenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cari Penerbangan"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:lineHeight="20dp"
                    style="@style/Widget.Material3.Button"
                    android:backgroundTint="#7126B5"
                    app:layout_constraintTop_toBottomOf="@id/passangerLayout"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/TitleDestinationFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Favorite"
        android:textSize="16sp"
        android:textColor="#151515"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoriteDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/TitleDestinationFavorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
<!--add scrollview-->


</androidx.constraintlayout.widget.ConstraintLayout>