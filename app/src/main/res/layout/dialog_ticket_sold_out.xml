<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/NEUTRAL05" />

    <LinearLayout
        android:id="@+id/layoutIllustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnUbahPencarian"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration_search_engine_not_found"
            />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="20dp"
            android:text="Maaf, Tiket terjual habis!"
            android:textColor="@color/NEUTRAL05"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="20dp"
            android:text="Coba cari perjalanan Lainnya!"
            android:textColor="@color/DARKBLUE04"
            android:textSize="14sp" />

    </LinearLayout>



    <Button
        android:id="@+id/btnUbahPencarian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Pencarian"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="24dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/NEUTRAL01"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/DARKBLUE05"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>