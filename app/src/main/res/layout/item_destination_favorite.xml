<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="14dp"
    app:cardCornerRadius="4dp"
    app:contentPadding="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/contoh_destination_favorite"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:background="@drawable/background_label">
                <TextView
                    android:id="@+id/tvLabelDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limited"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Jakarta -> Bangkok"
            android:textSize="12sp"
            android:textColor="#151515"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
        <TextView
            android:id="@+id/tvMaskapai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Asia"
            android:textSize="10sp"
            android:textColor="#7126B5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 - 30 Maret 2023"
            android:textSize="10sp"
            android:textColor="#151515"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai dari IDR "
                android:textSize="12sp"
                android:textColor="#151515"
                />
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950.000"
                android:textSize="12sp"
                android:textColor="#FF0000"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>